<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Chi tiết bài tập</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/contrib/auto-render.min.js"></script>
</head>
<body>
  <header class="app-header">
    <a class="brand" href="/"><img class="logo" src="/logo.svg" alt="">NudgeMath</a>
    <nav class="nav">
      <a href="/admin/exercises">Quản lý bài tập</a>
    </nav>
  </header>
  <div class="container">
    <div class="card">
      <% if (!ex) { %>
        <h1>Không tìm thấy bài tập</h1>
      <% } else { %>
        <h1><%= ex.title %></h1>
        <div class="math-content"><%= ex.question || ex.description || '' %></div>
        <% if (ex.images && ex.images.length) { %>
          <div style="margin:10px 0;"><strong>Ảnh đính kèm:</strong></div>
          <div class="grid" style="grid-template-columns: repeat(3, 1fr); gap: 8px;">
            <% ex.images.forEach(img => { %>
              <a href="/uploads/<%= img %>" target="_blank">
                <img src="/uploads/<%= img %>" alt="ảnh" style="width:100%;max-height:140px;object-fit:cover;border:1px solid var(--border);border-radius:6px" />
              </a>
            <% }) %>
          </div>
        <% } %>
        <% if (ex.mode === 'ai') { %>
          <h2>Đáp án</h2>
          <ul>
            <li>A. <span class="math-content"><%= ex.opt_a %></span></li>
            <li>B. <span class="math-content"><%= ex.opt_b %></span></li>
            <li>C. <span class="math-content"><%= ex.opt_c %></span></li>
            <li>D. <span class="math-content"><%= ex.opt_d %></span></li>
          </ul>
          <p><strong>Đáp án đúng:</strong> <%= ex.answer %></p>
          <h3>Giải thích</h3>
          <div class="alert alert-info">
            <div><strong>A:</strong> <span class="math-content"><%= ex.explain_a || '-' %></span></div>
            <div><strong>B:</strong> <span class="math-content"><%= ex.explain_b || '-' %></span></div>
            <div><strong>C:</strong> <span class="math-content"><%= ex.explain_c || '-' %></span></div>
            <div><strong>D:</strong> <span class="math-content"><%= ex.explain_d || '-' %></span></div>
          </div>
          <% if (ex.ai_solution) { %>
            <h3>Lời giải AI</h3>
            <div class="alert alert-info"><div class="math-content"><%= ex.ai_solution %></div></div>
          <% } %>
        <% } else { %>
          <h2>Đáp án</h2>
          <ul>
            <li>A. <span class="math-content"><%= ex.opt_a %></span></li>
            <li>B. <span class="math-content"><%= ex.opt_b %></span></li>
            <li>C. <span class="math-content"><%= ex.opt_c %></span></li>
            <li>D. <span class="math-content"><%= ex.opt_d %></span></li>
          </ul>
          <p><strong>Đáp án đúng:</strong> <%= ex.answer %></p>
        <% } %>
        <p style="margin-top:12px;"><a class="btn btn-outline" href="/admin/exercises">Quay lại danh sách</a></p>
      <% } %>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var opts = { ignoredTags: ['script','noscript','style','textarea','code','option'] };
      document.querySelectorAll('.math-content').forEach(function(el){ try { renderMathInElement(el, opts) } catch(e) {} });
    });
  </script>
</body>
</html>
